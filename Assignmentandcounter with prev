import React,{useState,useEffect,useRef} from 'react';

function CounterWithPrev(){
    const [count, setCount] = useState(0);
    const prevcountref=useRef();
    useEffect(() => {
        prevcountref.current = count;
        }, [count]);
        return (
            <div className='container'>
                <p>Count:<span style={{color:'green',margin:'5px'}}>{count}</span></p>
                <p>Previous Count: <span style={{color:'red',margin:'5px'}}>{prevcountref.current}</span></p>
                <button className='btn-primary m-2 p-2' onClick={() => setCount(count + 1)}>Increment</button>

            </div>
        );
}
export default CounterWithPrev;

import React from 'react';
import CounterWithPrev from './components/countervthprev';
import './App.css'
const App = () => {
  return (
    <div className="items">
     <CounterWithPrev/>
    </div>
  );
};

export default App;



